@model _19T1021203.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Supplier/Save" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Nhà Cung Cấp</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="SupplierName"
                           name="SupplierName"
                           value="@Model.SupplierName"
                           placeholder="" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên Giao Dịch</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="ContactName"
                           name="ContactName"
                           value="@Model.ContactName"
                           placeholder="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa Chỉ</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Address"
                           name="Address"
                           value="@Model.Address"
                           placeholder="" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện Thoại</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Phone"
                           name="Phone"
                           value="@Model.Phone"
                           placeholder="" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Quốc Gia</label>
                <div class="col-sm-10">
                    <select class="form-control"
                            id="Country"
                            name="Country">
                        <option>
                            -- Chọn Quốc Gia --
                        </option>
                        @foreach (var item in _19T1021139.BusinessLayers.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>

                            }

                        }
                    </select>

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thành Phố</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="City"
                           name="City"
                           value="@Model.City"
                           placeholder="" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã Bưu Chính</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Positalcode"
                           name="PostalCode"
                           value="@Model.PostalCode"
                           placeholder=""
                           autofocus>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk" style="margin-right:4px"></i>Lưu Dữ liệu
                    </button>
                    <a href="~/Supplier" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
