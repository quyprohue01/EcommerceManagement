@model _19T1021203.DomainModels.Employee
@{

}
<script>
    function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            reader.readAsDataURL(fileInput.files[0]);
        }
    }
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EmployeeID)
            @*@Html.ValidationSummary("", new { @style = "color:#f00" })*@
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.LastName,
                          new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.FirstName,
                          new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:#f00" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Ngày Sinh</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="birthday"
                           name="birthday"
                           value="@string.Format("{0:dd/MM/yyyy}",Model.BirthDate)"
                           placeholder="" autofocus>
                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color:#f00" })
                    @Html.HiddenFor(m => m.BirthDate)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.Email,
                          new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mật Khẩu</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.Password,
                          new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:#f00" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Chú thích</label>
                <div class="col-sm-10">


                    @Html.TextBoxFor(m => m.Note,
                          new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.Note, "", new { @style = "color:#f00" })

                </div>
            </div>

            <div class="form-group">

                <label class="control-label col-sm-2">Ảnh</label>
                <div class="col-sm-10">
                    <img id="photo" src="~/Photo/@Model.Photo" width="100" height="100" />

                    <input type="file"
                           class="form-control "
                           id="photo"
                           name="uploadPhoto"
                           onchange="document.getElementById('photo').src = window.URL.createObjectURL(this.files[0])" />
                    @Html.HiddenFor(m => m.Photo)
                    @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color: #f00" })
                </div>
            </div>
