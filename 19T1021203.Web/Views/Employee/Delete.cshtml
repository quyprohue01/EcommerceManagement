@model _19T1021203.DomainModels.Employee

@{
    ViewBag.Title = "Xoá Nhân viên";
}   

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Ngày Sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mật Khẩu:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Password</p>

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Chú thích:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @Model.Note
                    </p>

                    @*<textarea class="form-control"
                                  id="Notes"
                                  name="Notes" style="overflow-y: scroll; height: 124px; width: 988px;">
                        </textarea>*@

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <img src="@Model.Photo" style="width:200px;height:200px" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash" style="margin-right:4px"></i>Đồng ý xoá
                    </button>
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

