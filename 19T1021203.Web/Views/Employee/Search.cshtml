@model _19T1021203.Web.Models.EmployeeSearchOutput
@{
    Layout = null;
}
<p>có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> Nhà cung cấp trong tổng số <strong>@string.Format("{0:N0}", Model.PageCount)</strong> trang</p>
<div class="box-body">
    <table class="table table-bordered table-hover">
        <thead>
            <tr class="bg-primary">
                <th></th>
                <th>Họ</th>
                <th>Tên</th>
                <th>Ngày Sinh</th>
                <th>Email</th>
                <th>Mật Khẩu</th>
                <th>Ghi Chú</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td><img src=" ~/Photo/@item.Photo" style="width:100px;height:100px" /></td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@string.Format("{0:dd-MM-yyyy}", @item.BirthDate)</td>
                    <td>@item.Email</td>
                    <td>@item.Password</td>
                    <td>@item.Note</td>
                    <td>
                        <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-sm btn-success" title="Sửa">
                            <i class="glyphicon glyphicon-edit"></i>

                        </a>
                        <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-sm btn-danger" title="Xoá">
                            <i class="glyphicon glyphicon-trash"></i>

                        </a>

                    </td>
                </tr>
            }


        </tbody>
    </table>
    <div class="text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }

        </ul>
    </div>
    </div>
