@model _19T1021203.DomainModels.Category

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Save" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CategoryID)
            @*@Html.ValidationSummary("", new { @style = "color:#f00" })*@
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Loại Hàng</label>
                <div class="col-sm-10">
                    

                    @Html.TextBoxFor(m => m.CategoryName,
                         new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô Tả</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description,
                        new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã Loại Cha</label>
                <div class="col-sm-10">

                    <input type="text"
                           class="form-control"
                           id="ParentCategoryId"
                           name="ParentCategoryId"
                           value="@Model.ParentCategoryId"
                           placeholder="" autofocus>
                </div>



            </div>
</div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">
                <i class="glyphicon glyphicon-floppy-disk" style="margin-right:4px"></i>Lưu Dữ liệu
            </button>
            <a href="~/Category" class="btn btn-warning">
                Quay lại
            </a>
        </div>
    </div>
    </form>
</div>
</div>

