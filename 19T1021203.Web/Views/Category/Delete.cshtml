@model _19T1021203.DomainModels.Category
@{
    ViewBag.Title = "Xoá Loại Hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Loại Hàng</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô Tả</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã Loại Cha</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ParentCategoryId</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash" style="margin-right:4px"></i>Đồng ý xoá
                    </button>
                    <a href="~/Category" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

