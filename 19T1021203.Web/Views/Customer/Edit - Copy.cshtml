@model _19T1021203.DomainModels.Customer
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Customer/Save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Khách Hàng</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="CustomerName"
                           name="CustomerName"
                           value="@Model.CustomerName"
                           placeholder="" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên Liên Hệ</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="ContactName"
                           name="ContactName"
                           value="@Model.ContactName"
                           placeholder="" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa Chỉ</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Address"
                           name="Address"
                           value="@Model.Address"
                           placeholder="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    <input type="email"
                           class="form-control"
                           id="Email"
                           name="Email"
                           value="@Model.Email"
                           placeholder="" autofocus>
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Quốc Gia</label>
                <div class="col-sm-10">
                    <select class="form-control" id="Country"
                            name="Country">
                        <option>
                            -- Chọn Quốc Gia --
                        </option>
                        @foreach (var item in _19T1021203.BusinessLayers.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>

                            }

                        }
                    </select>

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thành Phố</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="City"
                           name="City"
                           value="@Model.City"
                           placeholder="" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã Bưu Chính</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="PostalCode"
                           name="PostalCode"
                           value="@Model.PostalCode"
                           placeholder="">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk" style="margin-right:4px"></i>Lưu Dữ liệu
                    </button>
                    <a href="~/Customer" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


