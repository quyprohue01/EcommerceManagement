@model _19T1021203.DomainModels.Customer
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Customer/Save" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CustomerID)
            @*@Html.ValidationSummary("", new { @style = "color:#f00" })*@
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Khách Hàng</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.CustomerName,
                        new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.CustomerName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên Liên Hệ</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName,
                        new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa Chỉ</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address,
                        new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email,
                        new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Quốc gia</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Country, SelectListHelper.Country(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thành Phố</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City,
                        new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.City, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã Bưu Chính</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode,
                        new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(m => m.PostalCode, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk" style="margin-right:4px"></i>Lưu Dữ liệu
                    </button>
                    <a href="~/Customer" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


