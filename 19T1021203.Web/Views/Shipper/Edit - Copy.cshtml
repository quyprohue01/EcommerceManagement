@model _19T1021203.DomainModels.Shipper
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Save">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Người Giao Hàng</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="ShipperName"
                           name="ShipperName"
                           value="@Model.ShipperName"
                           placeholder="" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Phone"
                           name="Phone"
                           value="@Model.Phone"
                           placeholder="" autofocus>
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk" style="margin-right:4px"></i>Lưu Dữ liệu
                    </button>
                    <a href="~/Shipper" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



