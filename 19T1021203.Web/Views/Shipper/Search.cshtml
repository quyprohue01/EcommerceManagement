@model _19T1021203.Web.Models.ShipperSearchOutput
@{
    Layout = null;
}

<div class="box-body">
    <p>Có <strong>@string.Format("{0:N0}", Model.RowCount)</strong> nhà cung cấp trong tổng số <strong>@string.Format("{0:N0}", Model.PageCount)</strong> trang</p>

    <table class="table table-bordered table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Tên Người giao hàng</th>
                <th>Số điện thoại</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td>
                        <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-sm btn-success" title="Sửa">
                            <i class="glyphicon glyphicon-edit"></i>

                        </a>
                        <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-sm btn-danger" title="Xoá">
                            <i class="glyphicon glyphicon-trash"></i>

                        </a>

                    </td>
                </tr>
            }


        </tbody>
    </table>
    <div class="text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="#">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }

        </ul>
    </div>
</div>
